/*Interpreter.as is a neat facade for the Simplified JavaScript classes.*/package org.sixsided.scripting.SJS {	public class Interpreter {		public var vm:VM;		public var parser:Parser;		public function Interpreter(bootScript:String='') {			vm = new VM();			parser = new Parser();			if (bootScript) {				load(bootScript);				run();			}		}		public function load(script:String) {			parser.parse(script);			vm.load(parser.codegen());		}		public function run() {			vm.run();		}		public function bind(key:String, value:*) {			vm.set_global(key, value);// functions, variables, whatever		}		public function bindAll(map:Object) {		  for(var key:String in map) {		    vm.set_global(key, map[key]);	    }    }	}}